#: import ListItemButton kivy.uix.listview.ListItemButton
#: import ListAdapter kivy.adapters.listadapter.ListAdapter

HufsGradeRoot:
    LoginForm

<HufsGradeRoot>:
 
<Grade_Analysis@BoxLayout>:
    orientation: "vertical"
    Label:
        text: "soon"
    BoxLayout:
        orientation: "horizontal"
        size_hint_y: None
        height: "40dp"
        Button:
            text: "Back"
            on_press: app.root.show_login_form()    

<LoginForm>:
    orientation: "vertical"
    id_input: id_box
    pwd_input: pwd_box
    studentinfo_results: studentinfo_results_list
    
    BoxLayout:
        size_hint_y: 0.1
        Button:
            text: "(1) Type your id and password. (2) Click the button you want."
    BoxLayout:
        size_hint_y: 0.1
        Label:
            text: "user_id:"
        TextInput:
            id: id_box
            multiline: False
            focus: True
    BoxLayout:
        size_hint_y: 0.1
        Label:
            text: "password:"
        TextInput:
            id: pwd_box
            password: True
            multiline: False
            focus: True
            on_text_validate: root.login()
    BoxLayout:
        size_hint_y: 0.1
        BoxLayout:
            Button:
                text: "Student info"
                on_press: root.login()
            Button:
                text: "Credits to graduate"
                on_press: root.credits_to_graduate()
            Button:
                text: "Grade Analysis"
                on_press: app.root.show_grade_analysis()
    ListView:
        id: studentinfo_results_list
		adapter:
            ListAdapter(data=[], cls=ListItemButton)
        font_name: 'ELEPHNT.TTF'
    Button:
        height: "40dp"
        size_hint_y: None
        text: "Logout"
        on_press: app.root.show_login_form()
		
        
