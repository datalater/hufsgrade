#: import ListItemButton kivy.uix.listview.ListItemButton
#: import ListAdapter kivy.adapters.listadapter.ListAdapter

HufsGradeRoot:

<HufsGradeRoot>:
    LoginForm

<LoginForm>:
    orientation: "vertical"
    id_input: id_box
    pwd_input: pwd_box
    studentinfo_results: studentinfo_results_list
    BoxLayout:
        size_hint_y: 0.1
        Button:
            text: "(1) Enter your id and password. (2) Press the button you want."
    BoxLayout:
        size_hint_y: 0.1
        Label:
            text: "user_id:"
        TextInput:
            id: id_box
            multiline: False
    BoxLayout:
        size_hint_y: 0.1
        Label:
            text: "password:"
        TextInput:
            id: pwd_box
            password: True
            multiline: False
    BoxLayout:
        size_hint_y: 0.1
        BoxLayout:
            Button:
                text: "Student info"
                on_press: root.login()
            Button:
                text: "Credits to graduate"
    ListView:
        id: studentinfo_results_list
		adapter:
            ListAdapter(data=[], cls=ListItemButton)
        font_name: 'ELEPHNT.TTF'
		
        
