#: import ListItemButton kivy.uix.listview.ListItemButton
#: import ListAdapter kivy.adapters.listadapter.ListAdapter

HufsGradeRoot:
    LoginForm

<HufsGradeRoot>:
 
<Graduate@BoxLayout>:
    orientation: "vertical"
    Label:
        text: "text"
    BoxLayout:
        orientation: "horizontal"
        size_hint_y: None
        height: "40dp"
        Button:
            text: "Back"
            on_press: app.root.show_login_form()
        Button:
            text: "Analysis"
    

<LoginForm>:
    orientation: "vertical"
    id_input: id_box
    pwd_input: pwd_box
    studentinfo_results: studentinfo_results_list
    BoxLayout:
        size_hint_y: 0.1
        Button:
            text: "(1) Enter your id and password. (2) Press the button you want."
    BoxLayout:
        size_hint_y: 0.1
        Label:
            text: "user_id:"
        TextInput:
            id: id_box
            multiline: False
    BoxLayout:
        size_hint_y: 0.1
        Label:
            text: "password:"
        TextInput:
            id: pwd_box
            password: True
            multiline: False
    BoxLayout:
        size_hint_y: 0.1
        BoxLayout:
            Button:
                text: "Student info"
                on_press: root.login()
            Button:
                text: "Credits to graduate"
                on_press: app.root.graduate()
    ListView:
        id: studentinfo_results_list
		adapter:
            ListAdapter(data=[], cls=ListItemButton)
        font_name: 'ELEPHNT.TTF'
		
        
